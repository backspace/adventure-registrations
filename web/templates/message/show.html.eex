<h2>Show message</h2>

<ul>

  <li>
    <strong>Subject:</strong>
    <%= @message.subject %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @message.content %>
  </li>

  <li>
    <strong>Ready:</strong>
    <%= @message.ready %>
  </li>

  <li>
    <strong>Postmarked at:</strong>
    <%= @message.postmarked_at %>
  </li>

</ul>

<%= link "Edit", to: message_path(@conn, :edit, @message) %>
<%= link "Back", to: message_path(@conn, :index) %>
